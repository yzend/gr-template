		flex: 1;

		&.is-dark {
			@apply bg-surface-800;
		}

		&.is-keycode-number,
		&.is-keycode-letter {
			width: 150rpx;
			flex: none;
		}

		&.is-keycode-caps,
		&.is-keycode-delete {
			width: 80rpx;
			flex: none;
		}

		&.is-keycode-letter,
		&.is-keycode-number,
		&.is-keycode-caps,
		&.is-keycode-delete {
			@apply bg-surface-200;

			&.is-dark {

		}
	}

	&--bottom {
		& > .cl-popup {
			@apply left-0 bottom-0;
			transform: translateY(100%);

			.cl-popup__inner {
				@apply rounded-t-2xl;
			}

			&.is-open {
				transform: translateY(0);
			}

			&.is-close {
				transform: translateY(100%);
			}
		}
	}

	&--center {
		@apply flex flex-col items-center justify-center;

		& > .cl-popup {
			transform: scale(1.3);
			opacity: 0;
			transition-property: transform, opacity;

			.cl-popup__inner {
				@apply rounded-2xl;
			}

			&.is-open {
				transform: translate(0, 0) scale(1);
				opacity: 1;
			}
		}
	}
}
